rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      // Allow create if the user is creating their own document (userId matches auth.uid)
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if isOwner(userId) || isAdmin();
    }

      // Daily screen time totals per user (synced from device)
      match /users/{userId}/usage/{dayId} {
        // Owners can read their own usage docs
        allow read: if isOwner(userId);

        // Owners can create/update their own daily usage with basic validation
        allow create, update: if isOwner(userId)
          && request.resource.data.keys().hasOnly(['seconds', 'updatedAt'])
          && request.resource.data.seconds is int
          && request.resource.data.seconds >= 0
          && request.resource.data.seconds <= 86400 // 24h cap in seconds
          && request.resource.data.updatedAt is timestamp;

        // Allow deletes by owner or admin (e.g., reset week)
        allow delete: if isOwner(userId) || isAdmin();
      }

    // User images subcollection
    match /users/{userId}/images/{imageId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isOwner(userId) || isAdmin();
    }

    // Flashcards owned by userId in document data
    match /flashcards/{docId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Notes owned by userId in document data
    match /notes/{docId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // AI chat sessions and messages owned by userId
    match /ai_sessions/{sessionId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    match /ai_sessions/{sessionId}/messages/{messageId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // PIN verification docs keyed by UID
    match /pins/{userId} {
      allow create, update, get, delete: if isOwner(userId) || isAdmin();
    }
  }
}
