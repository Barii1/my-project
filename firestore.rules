rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isOwner(userId) || isAdmin();
    }

    // User images subcollection
    match /users/{userId}/images/{imageId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isOwner(userId) || isAdmin();
    }

    // Flashcards owned by userId in document data
    match /flashcards/{docId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Notes owned by userId in document data
    match /notes/{docId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // AI chat sessions and messages owned by userId
    match /ai_sessions/{sessionId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    match /ai_sessions/{sessionId}/messages/{messageId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // PIN verification docs keyed by UID
    match /pins/{userId} {
      allow create, update, get, delete: if isOwner(userId) || isAdmin();
    }
  }
}
